{
   "compilerOptions": {
     "rootDir": "src",
     "outDir": "dist",
     "target": "es5",
     "module": "commonjs",
     "allowJs": false,
     "removeComments": true,
     "noImplicitAny": true,
     "noImplicitThis": true,
     "alwaysStrict": true,
     "noUnusedLocals": true,
     "noUnusedParameters": true,
     "noImplicitReturns": true
   },
   "include": ["src"],
   "exclude": ["dist", "node_modules"]
 }
